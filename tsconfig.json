  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": false,
    "moduleResolution": "Node",
